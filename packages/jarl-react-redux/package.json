{
    "name": "jarl-react-redux",
    "version": "1.0.0-beta.2",
    "description": "Redux integration for JARL",
    "main": "index.js",
    "module": "es/index.js",
    "sideEffects": false,
    "scripts": {
        "test": "jest --watch",
        "ci-test": "jest --colors",
        "build": "node ./tools/build.js --colors",
        "watch": "babel ./source -d . --ignore __tests__ --watch",
        "clean": "git clean -fdX .",
        "lint": "eslint source --max-warnings 0 --color"
    },
    "files": [
        "es",
        "umd",
        "index.js",
        "actions.js",
        "actionTypes.js",
        "defines.js",
        "Provider.js",
        "reducer.js"
    ],
    "jest": {
        "setupFiles": [
            "raf/polyfill",
            "./tools/configureJest.js"
        ],
        "testRegex": "__tests__/.+\\.test\\.js$"
    },
    "keywords": [
        "react",
        "reactjs",
        "hoc",
        "routing",
        "router",
        "components",
        "tools",
        "url",
        "history",
        "ssr",
        "redux"
    ],
    "author": "Peter Hurst",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/downplay/jarl-react.git"
    },
    "peerDependencies": {
        "react": ">=15.0.0"
    },
    "dependencies": {
        "invariant": "^2.2.2",
        "jarl-react": "^1.0.0-beta.2",
        "prop-types": "^15.6.0"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.0",
        "babel-eslint": "^8.1.0",
        "babel-jest": "^22.0.4",
        "babel-plugin-add-react-displayname": "^0.0.4",
        "babel-plugin-dev-expression": "^0.2.1",
        "babel-plugin-external-helpers": "^6.22.0",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-plugin-transform-react-remove-prop-types": "^0.4.12",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-preset-env": "^1.6.1",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-es2015-rollup": "^3.0.0",
        "babel-preset-react": "^6.24.1",
        "babel-runtime": "^6.26.0",
        "babelrc-rollup": "^3.0.0",
        "enzyme": "^3.2.0",
        "enzyme-adapter-react-16": "^1.1.0",
        "gzip-size": "^4.1.0",
        "jest": "^21.2.1",
        "pretty-bytes": "^4.0.2",
        "raf": "^3.4.0",
        "react": "^16.2.0",
        "react-addons-test-utils": "^15.6.2",
        "react-dom": "^16.2.0",
        "react-test-renderer": "^16.2.0",
        "rollup": "^0.53.0",
        "rollup-plugin-babel": "^3.0.2",
        "rollup-plugin-commonjs": "^8.2.6",
        "rollup-plugin-node-resolve": "^3.0.0",
        "rollup-plugin-replace": "^2.0.0",
        "rollup-plugin-uglify": "^2.0.1",
        "uglify-es": "^3.3.2"
    }
