{
    "name": "jarl-react",
    "version": "0.3.3",
    "description": "Just Another Router Library for React",
    "main": "index.js",
    "module": "es/index.js",
    "browserify": {
        "transform": [
            "loose-envify"
        ]
    },
    "scripts": {
        "test": "jest",
        "build": "node ./tools/build.js",
        "watch": "babel ./source -d . --ignore __tests__ --watch",
        "prepublishOnly": "node ./tools/build.js",
        "clean": "git clean -fdX .",
        "lint": "eslint source"
    },
    "files": [
        "es",
        "umd",
        "lib",
        "hocFactory.js",
        "index.js",
        "Link.js",
        "NavigationProvider.js",
        "RouteMapper.js",
        "SimpleProvider.js",
        "withActive.js",
        "withNavigate.js",
        "withState.js"
    ],
    "jest": {
        "setupFiles": [
            "raf/polyfill"
        ],
        "testRegex": "__tests__/.+\\.test\\.js$"
    },
    "keywords": [
        "react",
        "reactjs",
        "hoc",
        "routing",
        "router",
        "components",
        "tools",
        "url",
        "history",
        "ssr"
    ],
    "author": "Peter Hurst",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/downplay/jarl-react.git"
    },
    "peerDependencies": {
        "prop-types": ">=15",
        "react": ">=15"
    },
    "dependencies": {
        "hoist-non-react-statics": "^2.0.0",
        "qs": "^6.5.1"
    },
    "devDependencies": {
        "babel-jest": "^22.0.4",
        "babelrc-rollup": "^3.0.0",
        "enzyme": "^3.2.0",
        "enzyme-adapter-react-16": "^1.1.0",
        "gzip-size": "^4.1.0",
        "jest": "^21.2.1",
        "pretty-bytes": "^4.0.2",
        "raf": "^3.4.0",
        "react": "^16.2.0",
        "react-addons-test-utils": "^15.6.2",
        "react-dom": "^16.2.0",
        "react-test-renderer": "^16.2.0",
        "rollup": "^0.53.0",
        "rollup-plugin-babel": "^3.0.2",
        "rollup-plugin-commonjs": "^8.2.6",
        "rollup-plugin-node-resolve": "^3.0.0",
        "rollup-plugin-replace": "^2.0.0",
        "rollup-plugin-uglify": "^2.0.1",
        "uglify-es": "^3.3.2"
    }
}
